{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": false,
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["DOM", "ESNext", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    "noEmit": true,

    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "declaration": true,
    "jsx": "react-jsx",
    "pretty": true,
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      // lib
      "@layer-lib/react-use-callback-ref": ["./packages/lib/use-callback-ref/src"],
      "@layer-lib/react-use-mounted": ["./packages/lib/use-mounted/src"],
      "@layer-lib/react-context": ["./packages/lib/react-context/src"],
      "@layer-lib/react-use-composed-ref": ["./packages/lib/use-composed-ref/src"],
      "@layer-lib/react-use-browser-layout-effect": ["./packages/lib/use-browser-layout-effect/src"],
      "@layer-lib/use-spacing": ["./packages/lib/use-spacing/src"],
      "@layer-lib/react-use-escape-key-down": ["./packages/lib/use-escape-key-down/src"],

      // ui
      "@layer-ui/button": ["./packages/ui/button/src"],
      "@layer-ui/portal": ["./packages/ui/portal/src"],
      "@layer-ui/modal": ["./packages/ui/modal/src"],
      "@layer-ui/presence": ["./packages/ui/presence/src"],
    }
  },
  "include": ["demo", "packages", "ssr"]
}
